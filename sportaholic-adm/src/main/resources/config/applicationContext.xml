  	p:driverClassName="org.postgresql.Driver" 
  	p:url="jdbc:postgresql://54.149.164.253:5432/sportaholic" p:username="sportaholic" p:password="sportaholc" />--> 

  <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource" 
  	p:driverClassName="org.postgresql.Driver" 
  	p:rl="jdbc:postgresql://localhost:5432/sportaholic" p:username="sportaholic" p:password="sportaholic" />

  <!-- Hibernate Session Factory From Analytics DB -->
  <bean class="org.springframework.orm.hibernate4.LocalSessionFactoryBean" id="sessionFactory">
    <property name="dataSource" ref="dataSource" />
    <property name="packagesToScan">
      <list>
        <value>com.sportaholic.model</value>
      </list>
    </property>
    <property name="configLocation" value="classpath:/config/hibernate.cfg.xml" />
    <property name="hibernateProperties">
      <props>
        <prop key="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</prop>
	    <prop key="hibernate.show_sql">false</prop>
	    <prop key="hibernate.cache.use_query_cache">false</prop>
	    <prop key="hibernate.cache.use_second_level_cache">false</prop>
	    <prop key="hibernate.cache.use_structured_entries">false</prop>
	    <prop key="hibernate.cache.generate_statistics">false</prop>
      </props>
    </property>
  </bean>

  <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>
  <tx:annotation-driven transaction-manager="transactionManager" />
  
  <bean id="tilesConfigurer" class="org.springframework.web.servlet.view.tiles3.TilesConfigurer">
    <property name="definitions">
      <list>
        <value>classpath:/tiles/templates.xml</value>
        <value>classpath:/tiles/amazon-s3-files.xml</value>
        <value>classpath:/tiles/article-types.xml</value>
        <value>classpath:/tiles/articles.xml</value>
        <value>classpath:/tiles/authors.xml</value>
        <value>classpath:/tiles/brands.xml</value>
        <value>classpath:/tiles/errors.xml</value>
        <value>classpath:/tiles/product-categories.xml</value>
        <value>classpath:/tiles/product-types.xml</value>
        <value>classpath:/tiles/products.xml</value>
        <value>classpath:/tiles/sports.xml</value>
        <value>classpath:/tiles/static-pages.xml</value>
        <value>classpath:/tiles/uris.xml</value>
      </list>
    </property>
  </bean>
  <bean id="tilesviewResolver" class="org.springframework.web.servlet.view.tiles3.TilesViewResolver"/>

 </beans>